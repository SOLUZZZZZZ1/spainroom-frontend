{
  "version": 3,
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "^/api(?:/(.*))$",
      "dest": "https://tu_backend.render.app/api/$1",
      "check": true
    },
    {
      "src": "^/uploads(?:/(.*))$",
      "dest": "https://tu_backend.render.app/uploads/$1",
      "check": true
    },
    {
      "handle": "error"
    },
    {
      "status": 404,
      "src": "^(?!/api).*$",
      "dest": "/404.html"
    }
  ],
  "framework": {
    "version": "5.4.19"
  },
  "crons": []
}
